<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Android_TtuckTtak" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/general_theme_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/general_theme_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <!-- Window background color. -->
        <item name="android:windowBackground">@color/general_theme_white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Home theme. -->
    <style name="Theme.Android_TtuckTtak.Home" parent="Theme.Android_TtuckTtak">
        <item name="android:statusBarColor">@color/main_theme_blue</item>
        <item name="android:windowBackground">@color/main_theme_blue</item>
    </style>

    <!-- Setting theme. -->
    <style name="Theme.Android_TtuckTtak.Setting" parent="Theme.Android_TtuckTtak">
        <item name="android:statusBarColor">@color/general_theme_white</item>
        <item name="android:windowBackground">@color/general_theme_white</item>
    </style>

    <!-- Splash theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar"> <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- background -->
        <item name="android:windowBackground">@drawable/ic_background_splash</item>
    </style>
</resources>