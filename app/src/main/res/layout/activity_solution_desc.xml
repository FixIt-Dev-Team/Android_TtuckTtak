<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_theme_white">

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:includeFontPadding="false"
        android:textColor="@color/system_theme_gray"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/textview_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/button_back"
        tools:text="문제 해결 세부 템플릿" />

    <TextView
        android:id="@+id/textview_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:includeFontPadding="false"
        android:text="@string/solution_detail"
        android:textColor="@color/main_theme_subcyan"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/button_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_title"
        tools:text="해결안 템플릿" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/field_progressbar"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginHorizontal="13dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/textview_subtitle">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/progress_2_first"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:paddingHorizontal="3dp"
            android:src="@drawable/bg_rectangle_round"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5"
            app:tint="@color/system_theme_gray" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/progress_2_second"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:paddingHorizontal="3dp"
            android:src="@drawable/bg_rectangle_round"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5"
            app:tint="@color/system_theme_gray" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/progress_3_first"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:paddingHorizontal="3dp"
            android:src="@drawable/bg_rectangle_round"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.33"
            app:tint="@color/system_theme_gray" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/progress_3_second"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:paddingHorizontal="3dp"
            android:src="@drawable/bg_rectangle_round"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.33"
            app:tint="@color/system_theme_gray" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/progress_3_third"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:paddingHorizontal="3dp"
            android:src="@drawable/bg_rectangle_round"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.33"
            app:tint="@color/system_theme_gray" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/progress_4_first"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:paddingHorizontal="3dp"
            android:src="@drawable/bg_rectangle_round"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25"
            app:tint="@color/system_theme_gray" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/progress_4_second"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:paddingHorizontal="3dp"
            android:src="@drawable/bg_rectangle_round"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@id/progress_4_first"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25"
            app:tint="@color/system_theme_gray" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/progress_4_third"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:paddingHorizontal="3dp"
            android:src="@drawable/bg_rectangle_round"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@id/progress_4_second"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25"
            app:tint="@color/system_theme_gray" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/progress_4_fourth"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:paddingHorizontal="3dp"
            android:src="@drawable/bg_rectangle_round"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25"
            app:tint="@color/system_theme_gray" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/progress_5_first"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:paddingHorizontal="3dp"
            android:src="@drawable/bg_rectangle_round"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.20"
            app:tint="@color/system_theme_gray" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/progress_5_second"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:paddingHorizontal="3dp"
            android:src="@drawable/bg_rectangle_round"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@id/progress_5_first"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.20"
            app:tint="@color/system_theme_gray" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/progress_5_third"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:paddingHorizontal="3dp"
            android:src="@drawable/bg_rectangle_round"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@id/progress_5_second"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.20"
            app:tint="@color/system_theme_gray" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/progress_5_fourth"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:paddingHorizontal="3dp"
            android:src="@drawable/bg_rectangle_round"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@id/progress_5_third"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.20"
            app:tint="@color/system_theme_gray" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/progress_5_fifth"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:paddingHorizontal="3dp"
            android:src="@drawable/bg_rectangle_round"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.20"
            app:tint="@color/system_theme_gray" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/field_progressbar" />

    <TextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:textColor="@color/general_theme_black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"
        tools:text="내용이 입력됩니다.내용이 입력됩니다." />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:includeFontPadding="false"
        android:textColor="@color/system_theme_gray"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_content"
        tools:text="세부내용이 입력됩니다.세부내용이 입력됩니다.세부내용이 입력됩니다.세부내용이 입력됩니다.세부내용이 입력됩니다.세부내용이 입력됩니다." />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bypass_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_description" />

    <Button
        android:id="@+id/button_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rectangle_round_line"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:includeFontPadding="false"
        android:text="@string/go_next"
        android:textColor="@color/main_theme_blue"
        android:textSize="16sp"
        app:backgroundTint="@color/main_theme_blue"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bypass_list"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>