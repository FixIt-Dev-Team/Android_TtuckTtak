<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".ui.setting.SettingsProfileActivity"
    android:gravity="bottom"
    app:umanoDragView="@id/popUp"
    app:umanoPanelHeight="0dp"
    app:umanoOverlay="true"
    app:umanoShadowHeight="0dp">
    <!-- gravity 를 bottom으로 하면 아래에서 위로 드래그, top으로 하면 위에서 아래로 드래그 할 수 있다.
     umanoDragView 드래그 해서 보여줄 view를 선택
     umanoScrollableView  슬라이딩 패널에 내용물이 패널에 표시되는것보다 많을 때 스크롤 해서 보여줄 view 부분
     umanoParallaxOffset 에 값을 주면 해당 높이만큼 뒤에 화면을 올려준다.
     umanoShadowHeight 는 슬라이딩 패널 윗부분에 그림자 효과
     umanoOverlay 를 false로 해주면 슬라이딩 패널이 위로 보이고 뒷 부분은 반투명하게 보인다. -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/onboarding_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/general_theme_white"
        tools:context=".ui.setting.SettingsProfileActivirty">

        <TextView
            android:id="@+id/textview_profileSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:text="@string/profile_settings"
            android:textColor="@color/general_theme_black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.084" />

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/blank_text"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@id/textview_profileSetting"
            app:layout_constraintEnd_toStartOf="@id/textview_profileSetting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/textview_profileSetting" />

        <ImageButton
            android:id="@+id/imagebutton_save"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_check"
            android:contentDescription="@string/blank_text"
            app:layout_constraintBottom_toBottomOf="@id/textview_profileSetting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textview_profileSetting"
            app:layout_constraintTop_toTopOf="@id/textview_profileSetting"/>

        <FrameLayout
            android:id="@+id/frame_profile"
            android:layout_width="166dp"
            android:layout_height="166dp"
            android:layout_marginTop="33.5dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/system_theme_lightgray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_profileSetting" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profile"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:src="@drawable/img_profile" />

        </FrameLayout>

        <ImageButton
            android:id="@+id/button_profile_plus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ic_add"
            android:clickable="false"
            android:contentDescription="@string/blank_text"
            app:layout_constraintBottom_toBottomOf="@id/frame_profile"
            app:layout_constraintEnd_toEndOf="@id/frame_profile" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/textbox_state_normal"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frame_profile">

            <TextView
                android:id="@+id/textview_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:text="@string/input_nickname"
                android:textColor="@color/general_theme_black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:id="@+id/view_blueBar1"
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:layout_marginStart="11dp"
                android:background="@color/main_theme_blue"
                app:layout_constraintStart_toEndOf="@id/textview_nickname"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <EditText
                android:id="@+id/edittext_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:background="@android:color/transparent"
                android:enabled="true"
                android:fontFamily="@font/noto_sans_kr_bold"
                tools:text="@string/user_name"
                android:inputType="textPersonName"
                android:textColor="@color/general_theme_black"
                android:textSize="14sp"
                android:maxLength="12"
                app:layout_constraintStart_toEndOf="@id/view_blueBar1"
                app:layout_constraintEnd_toStartOf="@id/button_settingNickname"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/button_settingNickname"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_front"
                android:clickable="false"
                android:contentDescription="@string/blank_text"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textview_overlapNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:text="@string/overlap_nickname"
            android:textColor="@color/general_theme_red"
            android:textSize="10sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@id/layout_nickname"
            app:layout_constraintTop_toBottomOf="@id/layout_nickname"
            tools:ignore="SmallSp" />

        <LinearLayout
            android:id="@+id/layout_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/textbox_state_normal"
            android:orientation="horizontal"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_nickname">

            <TextView
                android:id="@+id/textview_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:text="@string/input_email"
                android:textColor="@color/general_theme_black"
                android:textSize="14sp" />

            <View
                android:id="@+id/view_blueBar2"
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:layout_marginStart="11dp"
                android:background="@color/main_theme_blue" />

            <TextView
                android:id="@+id/textview_userEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:background="@android:color/transparent"
                android:enabled="true"
                android:fontFamily="@font/noto_sans_kr_bold"
                tools:text="@string/user_email"
                android:textColor="@color/general_theme_black"
                android:textSize="14sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_passwordReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_rectangle_round"
            android:backgroundTint="@color/main_theme_subblue"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:padding="5dp"
            android:text="@string/password_reset"
            android:textColor="@color/general_theme_white"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_email"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/popUp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:clickable="true"
        android:focusable="false"
        android:background="@android:color/transparent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="20dp"
            android:background="@drawable/bg_slider"
            android:backgroundTint="@color/system_theme_lightgray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:includeFontPadding="false"
                android:textAlignment="center"
                android:textColor="@color/general_theme_black"
                android:textSize="14sp"
                android:text="@string/undo_change"
                app:layout_constraintVertical_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/button_back_true" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_back_true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rectangle_round"
                android:backgroundTint="@color/main_theme_blue"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:includeFontPadding="false"
                android:textAlignment="center"
                android:textColor="@color/general_theme_white"
                android:textSize="18sp"
                android:text="@string/undo"
                app:layout_constraintVertical_bias="0.7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>