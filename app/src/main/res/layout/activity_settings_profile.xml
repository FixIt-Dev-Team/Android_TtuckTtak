<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/onboarding_"
    tools:context=".ui.setting.SettingsProfileActivity">

    <TextView
        android:id="@+id/textview_profileSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_bold"
        android:text="@string/profile_settings"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09" />

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:backgroundTint="@android:color/transparent"
        android:clickable="false"
        android:contentDescription="@string/blank_text"
        android:scaleType="centerInside"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/textview_profileSetting"
        app:layout_constraintEnd_toStartOf="@id/textview_profileSetting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textview_profileSetting" />

    <FrameLayout
        android:id="@+id/layout_checkPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/textview_profileSetting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textview_profileSetting"
        app:layout_constraintTop_toTopOf="@id/textview_profileSetting">

        <ImageView
            android:id="@+id/imageview_checkPointCircle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:backgroundTint="@color/black"
            android:background="@drawable/ic_circle_full" />

        <ImageView
            android:id="@+id/imageview_checkPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:srcCompat="@drawable/ic_check" />
    </FrameLayout>

    <ImageView
        android:id="@+id/imageview_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="33.5dp"
        android:background="@drawable/img_profile"
        app:layout_constraintEnd_toEndOf="@id/textview_profileSetting"
        app:layout_constraintStart_toStartOf="@id/textview_profileSetting"
        app:layout_constraintTop_toBottomOf="@id/textview_profileSetting" />

    <FrameLayout
        android:id="@+id/layout_ProfilePlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/imageview_profile"
        app:layout_constraintEnd_toEndOf="@id/imageview_profile">

        <ImageButton
            android:id="@+id/button_imgProfilePlusCircle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ic_circle_full"
            android:backgroundTint="@color/main_theme_blue"
            android:clickable="false"
            android:contentDescription="@string/blank_text" />

        <ImageButton
            android:id="@+id/button_imgProfilePlus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ic_plus"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/blank_text" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_nikname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:background="@drawable/box_white"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="@id/imageview_profile"
        app:layout_constraintEnd_toEndOf="@id/imageview_profile"
        app:layout_constraintTop_toBottomOf="@id/imageview_profile">

        <TextView
            android:id="@+id/textview_nikname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_bold"
            android:text="@string/input_nikname"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:id="@+id/view_blueBar1"
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:layout_marginStart="11dp"
            android:background="@color/main_theme_blue" />

        <EditText
            android:id="@+id/edittext_inputNikname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:background="@android:color/transparent"
            android:enabled="true"
            android:fontFamily="@font/noto_sans_bold"
            android:hint="@string/user_name"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <FrameLayout
            android:id="@+id/layout_settingNikname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="163.2dp">

            <ImageButton
                android:id="@+id/button_settingNikname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_front"
                android:clickable="false"
                android:contentDescription="@string/blank_text" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textview_overlapNikname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_bold"
        android:text="@string/overlap_nikname"
        android:textColor="@color/general_theme_error"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/layout_nikname"
        app:layout_constraintEnd_toEndOf="@id/layout_nikname" />

    <LinearLayout
        android:id="@+id/layout_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="15dp"
        android:background="@drawable/box_white"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/layout_nikname"
        app:layout_constraintStart_toStartOf="@id/layout_nikname"
        app:layout_constraintTop_toBottomOf="@id/layout_nikname">

        <TextView
            android:id="@+id/textview_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/noto_sans_bold"
            android:text="@string/input_email" />

        <View
            android:id="@+id/view_blueBar2"
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:layout_marginStart="11dp"
            android:background="@color/main_theme_blue" />

        <EditText
            android:id="@+id/edittext_inputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            android:enabled="true"
            android:textColor="@color/black"
            android:fontFamily="@font/noto_sans_bold"
            android:inputType="textEmailAddress"
            android:hint="@string/user_email" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_passwordReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:orientation="vertical"
        android:background="@drawable/box_green_full"
        app:layout_constraintEnd_toEndOf="@id/layout_email"
        app:layout_constraintStart_toStartOf="@id/layout_email"
        app:layout_constraintTop_toBottomOf="@id/layout_email">

        <Button
            android:id="@+id/button_passwordReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@android:color/transparent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:drawableEnd="@drawable/ic_front"
            android:drawableTint="@color/white"
            android:text="@string/password_reset"
            android:fontFamily="@font/noto_sans_bold"
            android:textAlignment="center" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>