<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.join.JoinPart1Activity">

    <View
        android:id="@+id/view_progressBar"
        android:layout_width="120dp"
        android:layout_height="5dp"
        android:background="@color/main_theme_blue"
        app:layout_constraintBottom_toTopOf="@+id/textview_joinMembership"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_joinMembership"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_bold"
        android:text="@string/join_membership"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.084" />

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:backgroundTint="@android:color/transparent"
        android:clickable="false"
        android:contentDescription="@string/blank_text"
        android:scaleType="centerInside"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/textview_joinMembership"
        app:layout_constraintEnd_toStartOf="@id/textview_joinMembership"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textview_joinMembership" />

    <TextView
        android:id="@+id/textview_joinEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="289dp"
        android:fontFamily="@font/noto_sans_bold"
        android:text="@string/join_email"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/textview_joinMembership"
        app:layout_constraintStart_toStartOf="@+id/button_back"
        app:layout_constraintTop_toBottomOf="@id/textview_joinMembership" />

    <LinearLayout
        android:id="@+id/layout_joinEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/box_white"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_joinEmail">

        <EditText
            android:id="@+id/edittext_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="@string/user_email"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_overlapEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_bold"
        android:text="@string/overlap_email"
        android:textColor="@color/general_theme_error"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/layout_joinEmail"
        app:layout_constraintTop_toBottomOf="@+id/layout_joinEmail" />

    <Button
        android:id="@+id/button_certificationCode"
        android:layout_width="318dp"
        android:layout_height="56dp"
        android:backgroundTint="#d8d8d8"
        android:text="@string/certification_code"
        android:textColor="@color/main_theme_gray"
        android:textSize="18sp"
        android:fontFamily="@font/noto_sans_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/layout_joinEmail"
        app:layout_constraintStart_toStartOf="@+id/layout_joinEmail"
        app:layout_constraintTop_toBottomOf="@+id/layout_joinEmail" />


</androidx.constraintlayout.widget.ConstraintLayout>