<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.join.JoinPart3Activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_progressBar"
        android:layout_width="240dp"
        android:layout_height="5dp"
        android:background="@color/main_theme_blue"
        app:layout_constraintBottom_toTopOf="@+id/textview_joinMembership"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_joinMembership"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_bold"
        android:text="@string/join_membership"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.084" />

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:backgroundTint="@android:color/transparent"
        android:clickable="false"
        android:contentDescription="@string/blank_text"
        android:scaleType="centerInside"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/textview_joinMembership"
        app:layout_constraintEnd_toStartOf="@id/textview_joinMembership"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textview_joinMembership" />

    <TextView
        android:id="@+id/textview_joinUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_bold"
        android:text="@string/join_user_name"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="131dp"
        app:layout_constraintStart_toStartOf="@+id/button_back"
        app:layout_constraintTop_toBottomOf="@+id/button_back" />

    <LinearLayout
        android:id="@+id/layout_joinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/box_white"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_joinUserName">

        <EditText
            android:id="@+id/edittext_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="@string/user_name" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_overlapName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_bold"
        android:text="@string/overlap_nikname"
        android:textColor="@color/general_theme_error"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/layout_joinName"
        app:layout_constraintTop_toBottomOf="@id/layout_joinName" />

    <TextView
        android:id="@+id/textview_invalidName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_bold"
        android:text="@string/invalid_nikname"
        android:textColor="@color/general_theme_error"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/layout_joinName"
        app:layout_constraintTop_toBottomOf="@id/layout_joinName" />

    <TextView
        android:id="@+id/textview_joinUserPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:fontFamily="@font/noto_sans_bold"
        android:text="@string/join_user_password"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textview_joinUserName"
        app:layout_constraintTop_toBottomOf="@id/layout_joinName" />

    <LinearLayout
        android:id="@+id/layout_joinPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/box_white"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_joinUserPassword">

        <EditText
            android:id="@+id/edittext_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="@string/pw" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_passwordRule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_bold"
        android:text="@string/password_rule"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/layout_joinPassword"
        app:layout_constraintEnd_toEndOf="@+id/layout_joinPassword"
        app:layout_constraintStart_toStartOf="@+id/layout_joinPassword" />

    <TextView
        android:id="@+id/textview_passwordUsable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_bold"
        android:text="@string/password_usable"
        android:textColor="@color/main_theme_subcyan"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/layout_joinPassword"
        app:layout_constraintEnd_toEndOf="@+id/layout_joinPassword"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textview_passwordError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_bold"
        android:text="@string/password_error"
        android:textColor="@color/general_theme_error"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/layout_joinPassword"
        app:layout_constraintEnd_toEndOf="@+id/layout_joinPassword"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/layout_passwordCheck"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/box_white"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/layout_joinPassword"
        app:layout_constraintEnd_toEndOf="@id/layout_joinPassword"
        app:layout_constraintStart_toStartOf="@id/layout_joinPassword">

        <EditText
            android:id="@+id/edittext_passwordCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="@string/password_check" />
    </LinearLayout>

    <Button
        android:id="@+id/button_join"
        android:layout_width="318dp"
        android:layout_height="56dp"
        android:backgroundTint="#d8d8d8"
        android:fontFamily="@font/noto_sans_bold"
        android:text="@string/join"
        android:textColor="@color/main_theme_gray"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/layout_passwordCheck"
        app:layout_constraintStart_toStartOf="@+id/layout_passwordCheck"
        app:layout_constraintTop_toBottomOf="@+id/layout_passwordCheck" />

    <LinearLayout
        android:id="@+id/layout_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/box_alert"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/layout_usePromoteTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_agreeTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginStart="33.5dp"
                android:textSize="17sp"
                android:fontFamily="@font/noto_sans_bold"
                android:text="@string/agree_terms" />

            <RadioButton
                android:id="@+id/radiobutton_agreeTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/layout_serviceTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box_service_terms"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:id="@+id/layout_serviceTermsGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_useTerms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview_useTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18.5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/noto_sans_bold"
                        android:gravity="center"
                        android:text="@string/service_use_terms"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radiobutton_useTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="84dp"
                        android:layout_marginEnd="9dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_promoteTerms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview_promoteTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_marginStart="18.5dp"
                        android:textSize="12sp"
                        android:fontFamily="@font/noto_sans_bold"
                        android:text="@string/service_promote_terms" />

                    <RadioButton
                        android:id="@+id/radiobutton_promoteTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="84dp"
                        android:layout_marginEnd="9dp" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <Button
            android:id="@+id/button_start"
            android:layout_width="318dp"
            android:layout_height="56dp"
            android:backgroundTint="@color/main_theme_blue"
            android:fontFamily="@font/noto_sans_bold"
            android:text="@string/start"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>